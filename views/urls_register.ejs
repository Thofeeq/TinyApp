      <div class = "col-lg-1">
          <span><label>Register</label></span>
      </div>
      <div class = "col-lg-10">
          <div class="login">
          <form action="/register" class="login-form"  method="POST">
            <label for="E-mail">E-mail: </label>
            <input name = "email" class="form-control mr-sm-2"id="email" type="email" name="email" placeholder="youremail@email.com" style="width: 200px">
            <label for="password">Password: </label>
            <input name = "password" class="form-control mr-sm-2" id="password" type="password" name="password" style="width: 200px">
            <button type="submit"  class="btn btn-outline-primary btn-lg">Register</button>
          </form>
          <div class ="errors">
          <%if(errorCodes.emailExistError) { %>
            <p>Error: Email already exist!</p>
            <% errorCodes.emailExistError = false; %>
          <% } else if (errorCodes.invalidInputError) { %>
            <p>Error: Invaid input!</p>
            <% errorCodes.invalidInputError = false; %>
          <%}%>
        </div>
          </div>
          </div>
